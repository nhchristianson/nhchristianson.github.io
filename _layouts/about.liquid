---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bolder">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p><span style="font-size: 18px; font-weight: bolder">{{ page.subtitle }}</span></p>
  </header>

  <article>
    {% if page.profile %}
    <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
      {% if page.profile.image %}
        <img class="img-fluid z-depth-1 rounded" src="{{ page.profile.image | prepend: '/assets/img/' | relative_url }}">
      {% endif %}
      {% if page.social %}
          <div class="social">
            <div style="height: 10px;"></div>
            <div class="contact-note"><span style="font-size: 14px; font-weight: bolder;"> <b>Email</b>: christianson [at] jhu [dot] edu <br> or christianson [at] stanford [dot] edu <br> or find me (and my work) online:</span></div>
            <div class="contact-icons">{% include social.liquid %}</div>
          </div>
      {% endif %}
      {% if page.profile.address %}
        <div class="address">
          {{ page.profile.address }}
        </div>
      {% endif %}
    </div>
    {% endif %}


    <div class="clearfix">{{ content }}</div>


    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h3>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h3>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h3>selected publications <span style="color: grey; font-size: 0.7em;">(<a href="/research/#publications">full list →</a>)</span></h3>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Upcoming talks -->
    {% if page.announcements and page.announcements.enabled %}
      <h3>
        upcoming talks
      </h3>
      {% include talks.liquid%}
    {% endif %}

    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h3>
        recent news <span style="color: grey; font-size: 0.7em;">(<a href="/news/">older →</a>)</span>
      </h3>
      {% include news.liquid limit=true %}
    {% endif %}

    <!-- Social -->


    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
